{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "exclude": ["**/node_modules/**", "**/dist/**", "**/cache/**"]
}
